<Window
    x:Class="DZ_1_2.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DZ_1_2"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="465"
    Height="345"
    mc:Ignorable="d">
    <StackPanel Margin="5" VerticalAlignment="Center">
        <Button
            Name="bt_Start"
            Width="140"
            Height="30"
            Click="bt_Start_Click"
            Content="Start" />
        <Button
            Name="bt_Stop"
            Width="140"
            Height="30"
            Margin="0,20,0,0"
            Click="bt_Stop_Click"
            Content="Stop"
            IsEnabled="False" />
        <Button
            Name="bt_WaitForExit"
            Width="140"
            Height="30"
            Margin="0,20,0,0"
            Click="bt_WaitForExit_Click"
            Content="Wait for exit"
            IsEnabled="False" />
    </StackPanel>
</Window>
