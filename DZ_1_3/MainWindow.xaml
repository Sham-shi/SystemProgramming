<Window
    x:Class="DZ_1_3.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DZ_1_3"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    Title="MainWindow"
    Width="400"
    Height="260"
    mc:Ignorable="d">
    <StackPanel Margin="5">
        <StackPanel Orientation="Horizontal">
            <Label Margin="80,0,0,0" Content="Num1" />
            <Label Margin="130,0,0,0" Content="Num2" />
        </StackPanel>
        <StackPanel
            Height="30"
            Margin="0,0,0,20"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <xctk:DoubleUpDown Name="dud_Num1" Width="110" />
            <ComboBox
                Name="cbx_Operation"
                Width="40"
                Margin="10,0,10,0"
                HorizontalAlignment="Center"
                FontSize="16">
                <ComboBoxItem>+</ComboBoxItem>
                <ComboBoxItem>-</ComboBoxItem>
                <ComboBoxItem>/</ComboBoxItem>
                <ComboBoxItem>*</ComboBoxItem>
            </ComboBox>
            <xctk:DoubleUpDown Name="dud_Num2" Width="110" />
        </StackPanel>
        <Button
            Name="bt_Calculate"
            Width="140"
            Height="30"
            Click="bt_Calculate_Click"
            Content="Calculate" />
        <TextBlock
            Name="tbk_Result"
            Width="150"
            Height="30"
            Margin="0,30,0,0"
            VerticalAlignment="Center"
            TextAlignment="Center" />
    </StackPanel>
</Window>
